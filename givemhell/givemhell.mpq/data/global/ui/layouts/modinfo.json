{
    "type": "HelpPanel", "name": "modinfo",
    "fields": {
        "priority": 300,
        "fitToParent": true,
        "childFormats": [
        ],
    },
    "children": [
        {
            "type": "RectangleWidget", "name": "TransparentBG",
            "fields": {
                "fitToScreen": true,
                "color": [ 0.0, 0.0, 0.0, 0.6 ]
            },
            "children": [
                {
                    "type": "ClickCatcherWidget", "name": "catcher",
                    "fields": {
                        "fitToParent": true
                    }
                },  
            ]
        },
        {
            "type": "Widget", "name": "CenterSection",
            "fields": {
                "anchor": { "x": 0.5, "y": 0.5 },
                "rect": { "x": -45, "y": -785 },
            },
            "children": [

                // Text
                {
                    "type": "TextBoxWidget", "name": "Title",
                    "fields": {
                        "rect": { "x": 0, "y": -150 },
                        "text": "Mod Info",
                        "style": {
                            "fontColor": "$FontColorGoldYellow",
                            "pointSize": "$ExtraLargeFontSize",
                            "alignment": { "v": "center", "h": "center" }
                        }
                    }
                },
                {
                    "type": "TextBoxWidget", "name": "ModInfo",
                    "fields": {
                        "rect": { "x": -450, "y": 75, "width": 1200, "height": 900  },
                        "text": " D2R Givemhell - Made to work for bnet \n \n Author    | Givemhell\n Nexusmod | Psikrotic\n \n Version    | 1.1.0\n Latest Update | 11.7.2021\n \n \n Thanks for playing my mod!",
                        "fontType": "15ptF",
                        "style": {
                            "fontColor": { "r": 175, "g": 183, "b": 255, "a": 250 },
                            "pointSize": 23,
							"options": { "newlineHandling": "standard" , "lineWrap": true },
							"alignment": { "h": "left" },
							"spacing": { "leading": 1.2 }
                        }
                    }
                },
                {
                    "type": "ButtonWidget", "name": "Close",
                    "fields": {
						"anchor": { "x": 0.5 },
                        "rect": { "x": 600, "y": 1500 },
						"filename": "FrontEnd\\HD\\Final\\FrontEnd_ButtonSmall_r",
						"textString": "close",
						"focusIndicatorFilename": "Controller/HoverImages/FrontEndButtonSmall_Hover",
						"focusIndicatorOffset": { "x": 0, "y": 0 },
						"onClickMessage": "PanelManager:ClosePanel:modinfo",
						"text/style": "$StyleFEButtonText",
						"pointSize": "$NormalFontSize",
						"textColor": { "r": 175, "g": 183, "b": 255, "a": 250 },
                        "tooltipString": "@strClose",
                        "sound": "cursor_close_window_hd",
						"acceptsEscKeyEverywhere": true
                    }
                },
            ]
        },
    ]
